<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <ImageView
        android:id="@+id/listImage"
        android:layout_width="9dp"
        android:layout_height="80dp"
        android:layout_marginLeft="9dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/listpointq" />

    <ImageView
        android:id="@+id/listImagea"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/listImage"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@mipmap/listbadb" />

    <TextView
        android:id="@+id/goodThing"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/listImage"
        android:text="hahahgfdgdffdaffffffffffffffffffffffffffffffffffffffffffffff"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/goodTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:text="hahahaddddddddd"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/listImage"
        android:layout_marginBottom="5dp"/>

