<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="10dp" >


    <TextView
        android:id="@+id/allthingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/allthingSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/allthingTime"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/allthingGood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/allthingSum"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/allthingImportant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/allthingGood"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
