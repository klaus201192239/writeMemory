<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EndActivity" >

    <EditText
        android:id="@+id/ething_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/noticeinput"
        android:hint="您即将要做的事情～"
        android:paddingLeft="6dp"
        android:textColor="#a9a9a9"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ething_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ething_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="您即将要做的事情～"
        android:textColor="#a9a9a9"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/ething_pride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ething_time"
        android:layout_marginLeft="22dp"
        android:checked="true"
        android:text="对事情结果满意"
        android:textColor="#848484" />

    <CheckBox
        android:id="@+id/ething_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ething_pride"
        android:layout_marginLeft="22dp"
        android:checked="false"
        android:text="标记为重大事件"
        android:textColor="#848484" />

    <Button
        android:id="@+id/ething_ok"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/ething_important"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:layout_span="2"
        android:alpha="0.8"
        android:background="#E5E5E5"
        android:onClick="btonclick"
        android:text="保存本次记录"
        android:textColor="#FFCC33"
        android:textSize="16sp" />

    <Button
        android:id="@+id/ething_no"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/ething_important"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="30dp"
        android:layout_span="2"
        android:alpha="0.8"
        android:background="#E5E5E5"
        android:onClick="btonclick"
        android:text="取消本次记录"
        android:textColor="#FFCC33"
        android:textSize="16sp" />

</RelativeLayout>
